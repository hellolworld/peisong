<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/new_order_lv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/new_order_detail_container"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="5.35"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_order_lv_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/new_order_lv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/new_order_lv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/new_order_lv_orderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/new_order_lv_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="67dp"
        android:layout_height="37dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/new_order_deliver"
        android:textAlignment="viewEnd"/>

</LinearLayout>